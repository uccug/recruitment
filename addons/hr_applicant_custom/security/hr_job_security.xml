<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_applicant_stage_interviewer_rule" model="ir.rule">
        <field name="name">Applications: Stage Interviewer Access</field>
        <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
        <field name="domain_force">[
            '|',
                ('create_uid', '=', user.id),
            '|',
                ('job_id.create_uid', '=', user.id),
            '|',
                ('user_has_groups', '=', 'hr_recruitment.group_hr_recruitment_user'),
                ('job_id', 'in', user.env['hr.stage.interviewer'].search([
                    ('interviewer_ids', 'in', user.id),
                    ('start_date', '&lt;=', time.strftime('%Y-%m-%d')),
                    ('end_date', '&gt;=', time.strftime('%Y-%m-%d'))
                ]).mapped('job_id').ids)
        ]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="global" eval="True"/>
    </record>

    <record id="hr_job_stage_interviewer_rule" model="ir.rule">
        <field name="name">Jobs: Stage Interviewer Access</field>
        <field name="model_id" ref="hr.model_hr_job"/>
        <field name="domain_force">[
            '|',
                ('create_uid', '=', user.id),
            '|',
                ('user_has_groups', '=', 'hr_recruitment.group_hr_recruitment_user'),
                ('id', 'in', user.env['hr.stage.interviewer'].search([
                    ('interviewer_ids', 'in', user.id),
                    ('start_date', '&lt;=', time.strftime('%Y-%m-%d')),
                    ('end_date', '&gt;=', time.strftime('%Y-%m-%d'))
                ]).mapped('job_id').ids)
        ]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="global" eval="True"/>
    </record>
</odoo> 