<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- HR Users Rule - Full Access to Applications -->
    <record id="hr_applicant_hr_user_rule" model="ir.rule">
        <field name="name">HR Users: Full Access to Applications</field>
        <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('hr_recruitment.group_hr_recruitment_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <!-- Interviewer Rule - Restricted Access to Applications -->
    <record id="hr_applicant_stage_interviewer_rule" model="ir.rule">
        <field name="name">Applications: Stage Interviewer Access</field>
        <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
        <field name="domain_force">[
            '|',
                ('create_uid', '=', user.id),
            '|',
                ('job_id.create_uid', '=', user.id),
                ('job_id', 'in', user.env['hr.stage.interviewer'].search([
                    ('interviewer_ids', 'in', user.id),
                    ('start_date', '&lt;=', time.strftime('%Y-%m-%d')),
                    ('end_date', '&gt;=', time.strftime('%Y-%m-%d'))
                ]).mapped('job_id').ids)
        ]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- HR Users Rule - Full Access to Jobs -->
    <record id="hr_job_hr_user_rule" model="ir.rule">
        <field name="name">HR Users: Full Access to Jobs</field>
        <field name="model_id" ref="hr.model_hr_job"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('hr_recruitment.group_hr_recruitment_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <!-- Interviewer Rule - Restricted Access to Jobs -->
    <record id="hr_job_stage_interviewer_rule" model="ir.rule">
        <field name="name">Jobs: Stage Interviewer Access</field>
        <field name="model_id" ref="hr.model_hr_job"/>
        <field name="domain_force">[
            '|',
                ('create_uid', '=', user.id),
                ('id', 'in', user.env['hr.stage.interviewer'].search([
                    ('interviewer_ids', 'in', user.id),
                    ('start_date', '&lt;=', time.strftime('%Y-%m-%d')),
                    ('end_date', '&gt;=', time.strftime('%Y-%m-%d'))
                ]).mapped('job_id').ids)
        ]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo> 