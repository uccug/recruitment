<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_recruitment_stage_form_inherit" model="ir.ui.view">
        <field name="name">hr.recruitment.stage.form.inherit</field>
        <field name="model">hr.recruitment.stage</field>
        <field name="inherit_id" ref="hr_recruitment.hr_recruitment_stage_form"/>
        <field name="arch" type="xml">
            <field name="requirements" position="after">
                <notebook>
                    <page string="Job-Specific Interviewers">
                        <field name="stage_interviewer_ids" context="{'active_id': id}">
                            <tree editable="bottom">
                                <field name="stage_id" invisible="1" force_save="1"/>
                                <field name="job_id" invisible="1" force_save="1"/>
                                <field name="interviewer_ids" widget="many2many_tags"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="active"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </field>
    </record>
</odoo> 